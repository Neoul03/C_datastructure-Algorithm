int main(){
	
	int a, b;
	int result;

	printf("첫번째 계산할 값을 입력하세요 ==> ");
	scanf_s("%d", &a); // variable에 접근해 값을 변경시켜야 하는데 &를 작성하지 않으면, local 상태로 함수의 종료와 함께 소멸함.

	printf("두번째 계산할 값을 입력하세요 ==> ");
	scanf_s("%d", &b);

	result = a + b;
	printf("%d + %d = %d\n", a, b, result);

	result = a - b;
	printf("%d - %d = %d\n", a, b, result);

	result = a * b;
	printf("%d * %d = %d\n", a, b, result);

	result = a / b;
	printf("%d / %d = %d\n", a, b, result);

}
